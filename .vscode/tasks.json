{
    "options": {"env": {
        "PegasusHome": "$(pwd)", 
        "PegasusEngine": "${workspaceFolder}/engine", 
        "PegasusInclude": "${workspaceFolder}/include", 
        "PegasusImgui": "${workspaceFolder}/Imgui"
    }},
    
    "tasks": [
        {
            
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-w",
                "-Wreturn-local-addr",
                "${workspaceFolder}/src/State.cpp",
                "${workspaceFolder}/src/MainMenuState.cpp",
                "${workspaceFolder}/src/GameState.cpp",
                "${workspaceFolder}/src/BattleState.cpp",
                "${workspaceFolder}/src/Entity.cpp",
                "${workspaceFolder}/src/Enemy.cpp",
                "${workspaceFolder}/src/animationComponet.cpp",
                "${workspaceFolder}/src/BattleGUI.cpp",
                "${workspaceFolder}/src/Blerb.cpp",
                "${workspaceFolder}/src/Blrb.cpp",
                "${workspaceFolder}/src/CharacterEditorState.cpp",
                "${workspaceFolder}/src/CharacterTab.cpp",
                "${workspaceFolder}/src/DefaultMode.cpp",
                "${workspaceFolder}/src/DialougeSystem.cpp",
                "${workspaceFolder}/src/easylogging++.cc",
                "${workspaceFolder}/src/EditorModes.cpp",
                "${workspaceFolder}/src/EditorState.cpp",
                "${workspaceFolder}/src/EnemyEditorMode.cpp",
                "${workspaceFolder}/src/EnemySpawner.cpp",
                "${workspaceFolder}/src/EnviornmentalMode.cpp",
                "${workspaceFolder}/src/Game.cpp",
                "${workspaceFolder}/src/GraphicsSettings.cpp",
                "${workspaceFolder}/src/GUI.cpp",
                "${workspaceFolder}/src/hitboxcomponet.cpp",
                "${workspaceFolder}/src/imgui_draw.cpp",
                "${workspaceFolder}/src/imgui_impl_opengl3.cpp",
                "${workspaceFolder}/src/imgui_stdlib.cpp",
                "${workspaceFolder}/src/imgui_tables.cpp",
                "${workspaceFolder}/src/imgui_widgets.cpp",
                "${workspaceFolder}/src/imgui-SFML.cpp",
                "${workspaceFolder}/src/imgui.cpp",
                "${workspaceFolder}/src/Inventory.cpp",
                "${workspaceFolder}/src/Lantern.cpp",
                "${workspaceFolder}/src/Level.cpp",
                "${workspaceFolder}/src/Levels.cpp",
                "${workspaceFolder}/src/Line.cpp",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/NormalTile.cpp",
                "${workspaceFolder}/src/ObjectTile.cpp",
                "${workspaceFolder}/src/PauseMenu.cpp",
                "${workspaceFolder}/src/PhysicsComponents.cpp",
                "${workspaceFolder}/src/PlayerGUITabs.cpp",
                "${workspaceFolder}/src/PlayerGUI.cpp",
                "${workspaceFolder}/src/SettingsState.cpp",
                "${workspaceFolder}/src/ShaderEditorMode.cpp",
                "${workspaceFolder}/src/SkillComponent.cpp",
                "${workspaceFolder}/src/StatusComponet.cpp",
                "${workspaceFolder}/src/Tab.cpp",
                "${workspaceFolder}/src/Tile.cpp",
                "${workspaceFolder}/src/TileMap.cpp",
                "${workspaceFolder}/src/Player.cpp",
                "${workspaceFolder}/src/EnemySystem.cpp",
                "-o",
                "Pegasus",
                "-I",
                "${workspaceFolder}/src/include", 
                "-I",
                "${workspaceFolder}/src/Imgui","-fpermissive",
                "-I", 
                "/usr/./local/include/SFML",
                "-I/usr/local/lib/SFML/lsfml-system",
                "-I/usr/local/lib/SFML/llsfml-audio", 
                "-I/usr/local/lib/SFML/llsfml-graphics", 
                "-I/usr/local/lib/SFML/llsfml-window", 
                "-lglut",
                "-LGLU",
                "-lGL", 
                "-lsfml-system", 
                "-lsfml-window",
                "-lsfml-graphics",
                "-lsfml-audio",  
                "-Wreturn-local-addr",
                "-libCandle-s.a"

            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
            
            
        }
    ],
    "version": "2.0.0"
}